---
import type { MarkdownLayoutProps } from "astro";
import Main from "../layouts/Main.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  subtitle: string;
  poster: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title={title}>
  <figure class="figure">
    <img
      src={poster}
      alt=""
      width="100%"
      height="480px"
      class="figure__image"
    />
    <figcaption>
      Poster image from {title.toLocaleLowerCase()}
    </figcaption>
  </figure>
  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <slot />
</Main>

<style>
  .figure {
    margin: 0;
  }
  .figure__image {
    max-width: 100%;
  }
</style>
