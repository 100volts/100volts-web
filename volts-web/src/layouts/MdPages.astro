---
import type { MarkdownLayoutProps } from "astro";
import Main from "./Main.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  subtitle: string;
  poster: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title={title}>
  <figure class="figure">
    <img
      src={poster}
      alt=""
      width="880px"
      height="480px"
      class="figure__image"
    />
    <br />
    <figcaption class="figure__caption">
      Poster image from {title.toLocaleLowerCase()}
    </figcaption>
  </figure>
  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <slot />
</Main>

<style>
  .figure {
    display: flex;
    justify-content: center;
    flex-flow: column wrap;
    margin: 0;
  }
  .figure__image {
    max-width: 100%;
    border-radius: 10px;
  }
  .figure__caption {
    font-size: 0.9;
  }
</style>
